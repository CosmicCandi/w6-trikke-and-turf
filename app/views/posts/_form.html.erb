<% if @post.errors.any? %>
<div class="row">
  <div class="bg-danger col-sm-3 text-center col-sm-offset-2">
    <ul class="list-unstyled">
      <% @post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
    <%= simple_form_for @post, html: {class: "form-horizontal"} do |f| %>
      <%= f.input :photo %>
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
